extends layout

block content
	div(class='container', style='margin-top: 130px;')
		if (errMsg != '')
			.error-msg
				i.fa.fa-times-circle 
				span  #{errMsg}
		if (sucMsg != '')
			.success-msg
				i.fa.fa-check
				span  #{sucMsg}
		.row
			.col-md-3
			.col-md-6
				.new-login-form
					center
						form(name='login', action='/login/userlogin', method='post')
							img(src='/images/logo/koalalogo.png')
							h3 Please Login
							input.login-email(type='email', name='email', placeholder='Enter your email')
							br
							input.login-password(type='password', name='password', placeholder='Enter your password')
							br
							input.new-login-btn(type='submit', name='login', value='login')
							br
							a.new-forgot-password-link(href='/forgot-password') forgot password ?
							br
							a.new-login-google-link(href='/auth/google') Login Through Google +
							br
							br
							span Don't have an account ? 
								a(href='/signup') Sign Up
